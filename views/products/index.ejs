<% layout('layouts/boilerplate') %>
<h1>PRODUCTS</h1>
<% for (let product of products) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%=product.images[0].url %>" alt="">
            </div>
            <div class="col-md-8">
                <h5 class="card-title">
                    <%=product.title%>
                </h5>
                <p>
                    <%=product.description%>
                </p>
                <a class="btn btn-primary" href="/products/<%=product._id%>">View</a>
            </div>
        </div>
    </div>
        
<% }%>
  